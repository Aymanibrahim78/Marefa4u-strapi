{
  "kind": "collectionType",
  "collectionName": "blogs",
  "info": {
    "singularName": "blog",
    "pluralName": "blogs",
    "displayName": "blog"
  },
  "options": {
    "draftAndPublish": true
  },
  "pluginOptions": {},
  "attributes": {
    "BlogContent": {
      "type": "blocks"
    },
    "title": {
      "type": "string",
      "unique": true,
      "required": true
    },
    "description": {
      "type": "text",
      "required": false
    },
    "Image": {
      "allowedTypes": [
        "images"
      ],
      "type": "media",
      "multiple": false,
      "required": true
    },
    "category": {
      "type": "enumeration",
      "enum": [
        "Technology",
        "Management",
        "Education",
        "Front End",
        "Back End"
      ],
      "default": "Technology"
    },
    "languageArabic": {
      "type": "boolean",
      "default": true
    }
  }
}
